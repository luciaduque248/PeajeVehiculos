--calculacoin de tarifa
library IEEE;
use IEEE.STD_LOGIC_1164.ALL;
use IEEE.STD_LOGIC_ARITH.ALL;
use IEEE.STD_LOGIC_UNSIGNED.ALL;

entity CalcularTarifa is
    Port (
        vehicle_category : in STD_LOGIC_VECTOR(2 downto 0);  -- Categoría del vehículo (3 bits)
        tariff : out INTEGER range 0 to 999  -- Tarifa calculada (en centavos)
    );
end CalcularTarifa;

architecture Behavioral of CalcularTarifa is
    constant TARIFF_AUTOMOBILE : INTEGER := 100;  -- Tarifa para automóviles (en centavos)
    constant TARIFF_TRUCK : INTEGER := 200;  -- Tarifa para camiones (en centavos)
    constant TARIFF_MOTORCYCLE : INTEGER := 50;  -- Tarifa para motocicletas (en centavos)
begin
    process (vehicle_category)
    begin
        case vehicle_category is
            when "000" =>
                -- Automóvil
                 tariff <= TARIFF_AUTOMOBILE;
            when "001" =>
                -- Camión
                tariff <= TARIFF_TRUCK;
            when "010" =>
                -- Motocicleta
                tariff <= TARIFF_MOTORCYCLE;
            when others =>
                -- Por defecto: No hay vehículo detectado
                tariff <= 0;
        end case;
    end process;
end Behavioral;